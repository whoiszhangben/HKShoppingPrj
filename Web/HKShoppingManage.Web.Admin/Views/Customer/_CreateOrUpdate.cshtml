@using HKShoppingManage.Model
@model Customer

@Html.ValidationSummary(false)
@Html.HiddenFor(model => model.Id)

<div class="content">
    <div class="form-horizontal">
        <div id="customer-edit" class="nav-tabs-custom">
            <ul class="nav nav-tabs">
                @Html.RenderBootstrapTabHeader("tab-info", new LocalizedString("客户信息"), true)                
            </ul>
            <div class="tab-content">
                @Html.RenderBootstrapTabContent("tab-info", @TabInfo(), true)
            </div>
        </div>
    </div>
</div>

@*save selected tab name*@
<input type="hidden" id="selected-tab-name" name="selected-tab-name" value="@(Html.GetSelectedTabName())">

@helper TabInfo()
{
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-3">
                        <div class="label-wrapper">
                            @Html.LabelFor(model => model.CusName)
                        </div>
                    </div>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.CusName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CusName)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <div class="label-wrapper">
                            @Html.LabelFor(model => model.HelpCode)
                        </div>
                    </div>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.HelpCode, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.HelpCode)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <div class="label-wrapper">
                            @Html.LabelFor(model => model.CusTelephone)
                        </div>
                    </div>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.CusTelephone, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CusTelephone)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <div class="label-wrapper">
                            @Html.LabelFor(model => model.CusAddress)
                        </div>
                    </div>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.CusAddress, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CusAddress)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <div class="label-wrapper">
                            @Html.LabelFor(model => model.CusGender)
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="raw">
                            <div class="col-md-1">
                                <div>
                                    <label class="radio">
                                        @Html.RadioButtonFor(model => model.CusGender, true, new { @id = "Gender_Male", @name = "Gender" })
                                        <span>男</span>
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-11">
                                <div>
                                    <label class="radio">
                                        @Html.RadioButtonFor(model => model.CusGender, false, new { @id = "Gender_Female", @name = "Gender" })
                                        <span>女</span>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <div class="label-wrapper">
                            @Html.LabelFor(model => model.CusRemark)
                        </div>
                    </div>
                    <div class="col-md-9">
                        @Html.TextAreaFor(model => model.CusRemark, new { @class = "form-control", @rows = "5" })
                        @Html.ValidationMessageFor(model => model.CusRemark)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <div class="label-wrapper">
                            @Html.LabelFor(model => model.IsValid, new { htmlAttributes = new { @class = "checkbox" } })
                        </div>
                    </div>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.IsValid)
                        @Html.ValidationMessageFor(model => model.IsValid)
                    </div>
                </div>
            </div>
        </div>
    </div>
}